<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme (Default - Light/Dark) -->
    <style name="Base.Theme.WatchIt" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/main_color</item>
        <item name="android:windowLightStatusBar">true</item> <!-- Light status bar icons -->
    </style>

    <!-- Dark Theme -->
    <style name="Base.Theme.WatchIt.Dark" parent="Theme.Material3.Dark.NoActionBar">
        <item name="android:statusBarColor">@color/main_color</item>
        <item name="android:windowLightStatusBar">false</item> <!-- Dark status bar icons -->
    </style>

</resources>
