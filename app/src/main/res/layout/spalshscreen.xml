<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".spalshscreen">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Watch It!"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="@dimen/_40ssp"
            android:textStyle="bold|italic"
            android:layout_marginTop="@dimen/_24sdp"/> <!-- Reduced -->

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/intro_logo"
            android:adjustViewBounds="true"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="@dimen/_18ssp"
        android:layout_margin="@dimen/_24sdp"
        android:text="Watch Premium Hundreds of Tv Shows Movies are waiting for you right on the phone."/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button1"
            android:layout_margin="@dimen/_24sdp"
        android:background="@drawable/red_bg"
        android:textColor="@color/white"
        android:textSize="@dimen/_18ssp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get Started!"/>
    </LinearLayout>
</ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
